.controls.col-sm-10{data: { nestedmany: true }}
  .btn-group
    %a.btn.btn-info.toggler{:'data-toggle' => "button", :'data-target' => "#{form.jquery_namespace(field)} > .tab-content, #{form.jquery_namespace(field)} > .annotation-image, #{form.jquery_namespace(field)} > .controls > .nav, #{form.jquery_namespace(field)} > .tab-content-footer", class: (field.active? ? 'active' : '')}
      %i.icon-white
    - unless field.nested_form[:update_only] || !field.inline_add
      = form.link_to_add "<i class=\"icon-plus icon-white\"></i> #{wording_for(:link, :new, field.associated_model_config.abstract_model)}".html_safe, field.name, { class: 'btn btn-info' }
  = form.errors_for(field)
  = form.help_for(field)
  %ul.nav.nav-tabs.disabled

.annotation-image{style: (field.active? ? 'display:inline-block' : 'display:none')}
  - if @object.image.present?
    = image_tag @object.image.url
  - else
    %span{class: 'help-block'}
      = I18n.t('admin.help.missing_annotation_image')
.tab-content.sort-items.annotations
  %span{class: 'help-block'}
    = I18n.t('admin.help.sort')
  = form.fields_for field.name do |nested_form|
    - if field.nested_form[:allow_destroy] || nested_form.options[:child_index] == "new_#{field.name}"
      = nested_form.link_to_remove '<span class="btn btn-small btn-danger"><i class="icon-trash icon-white"></i></span>'.html_safe
    %span.move-item.btn.btn-small.btn-default
      %i.fa.fa-arrows.fa-white{title: "#{I18n.t('admin.help.move')}"}
    %span.annotation-add.btn.btn-small.btn-default
      %i.fa.fa-map-marker.fa-white{title: "#{I18n.t('admin.help.annotation.add')}"}
    = nested_form.generate({action: :nested, model_config: field.associated_model_config, nested_in: field })

.controls.tab-content-footer.sort-items.annotations
  .btn-group
    - unless field.nested_form[:update_only] || !field.inline_add
      = form.link_to_add "<i class=\"icon-plus icon-white\"></i> #{wording_for(:link, :new, field.associated_model_config.abstract_model)}".html_safe, field.name, { class: 'btn btn-info' }

  %hr
