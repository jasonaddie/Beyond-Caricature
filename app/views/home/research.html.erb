<%
  @lang_switcher_record = @research
  @lang_switcher_has_translations = true
  @lang_switcher_params_key = :id
  @lang_switcher_is_public = true
  @lang_switcher_fallback_url = researches_path
%>
<h1><%= @research.title %></h1>

<div>
  <%= image_tag @research.cover_image.thumb('300x200#').url if @research.cover_image_stored? %>
</div>
<div>
  <%= @research.date_publish %>
</div>
<div>
  <%= simple_format(@research.text) %>
</div>

<% if @research.slideshows.present? %>
  <h2><%= t('labels.slideshow') %></h2>

  <ul>
    <% @research.slideshows.each do |image| %>
      <li>
        <%= image_tag image.image.thumb('300x200#').url if image.image_stored? %>
      </li>
    <% end %>
  </ul>
<% end %>


<% if @research.related_items.present? %>
  <h2><%= t('labels.related_items') %></h2>

  <ul>
    <% @research.related_items.each do |related_item| %>
      <li>
        <%= link_to related_item.item_title, related_item.item_link %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to t('labels.all_research'), researches_path %>